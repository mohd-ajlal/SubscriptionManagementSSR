<%- include("partials/navbar") %>

<div class="container mt-5">
  <h2>Edit Subscription</h2>
  <form action="/subscriptions/<%= subscription._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="plan">Plan (Cannot be changed):</label>
      <input type="text" id="plan" class="form-control" value="<%= subscription.plan %>" disabled>
    </div>

    <div class="form-group">
      <label for="cost">Cost:</label>
      <input type="number" id="cost" name="cost" class="form-control" value="<%= subscription.cost %>" required>
    </div>

    <div class="form-group">
      <label for="startDate">Start Date:</label>
      <input type="date" id="startDate" name="startDate" class="form-control" value="<%= subscription.startDate.toISOString().split('T')[0] %>" required>
    </div>

    <div class="form-group">
      <label for="endDate">End Date:</label>
      <input type="date" id="endDate" name="endDate" class="form-control" value="<%= subscription.endDate ? subscription.endDate.toISOString().split('T')[0] : '' %>">
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>